@model List<DoctorViewModel> 
@{
    ViewData["Title"] = "Home Page";
}

<input type="text" />

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var doctor in Model)
            {
                <tr>
                    <th scope="row">
                        @(Model.IndexOf(doctor) + 1)
                    </th>
                    <td>@doctor.Name</td>
                    <td>View | Delete</td>
                </tr>
            }
        </tbody>
    </table>
</div>
