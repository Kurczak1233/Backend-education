@model DoctorViewModel

@{
    ViewData["Title"] = "Prescription Page";
}

<a class="btn btn-success" asp-controller="Prescription" asp-action="Add">Go to Add</a>

<div>
    Doctors's data: <br />
    FirstName: @Model.FirstName<br />
    LastName: @Model.LastName<br />
    Phone number: @Model.PhoneNumber<br />
    WorkYears: @Model.WorkYears<br />
    Is able to make prescriptions: @Model.IsAbleToMakePrescriptions<br />
</div>


<form asp-controller="Prescription" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-success">Filter</button>
</form>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    Id
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Created date
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.PresiptionsList)
            {
                <tr>
                    <th scope="row">
                        @prescription.Id
                    </th>
                    <td>@prescription.Name</td>
                    <td>
                        <a class="text-dark" asp-area="" asp-controller="Prescription" asp-action="View" asp-route-prescriptionId="@prescription.Id">View</a> |
                        <a class="text-dark" asp-area="" asp-controller="Prescription" asp-action="Delete" asp-route-prescriptionId="@prescription.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
