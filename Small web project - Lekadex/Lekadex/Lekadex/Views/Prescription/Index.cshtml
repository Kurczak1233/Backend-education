@model DoctorViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    Doctors's' data:
    Name: @Model.Name
</div>

<input type="text" />

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                <tr>
                    <th scope="row">
                        @(Model.Prescriptions.IndexOf(prescription) + 1)
                    </th>
                    <td>@prescription.Name</td>
                    <td>View | Delete</td>
                </tr>
            }
        </tbody>
    </table>
</div>
